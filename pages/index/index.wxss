/*search s  */
.search{
  position: fixed;
  z-index: 100000000;
  width: 100%;
  background: #29402e;
  height: 70rpx;
  margin: 0 auto;
  padding-bottom: 30rpx;
}
.search input{
  width: 90%;
  padding-left: 4%;
  display: block;
  margin: 0 auto;
  background: #405244;
  font-size: 30rpx;
  border-radius:10rpx; 
  height: 70rpx;
  line-height: 70rpx;
  color: #e6e6e6;
  }

