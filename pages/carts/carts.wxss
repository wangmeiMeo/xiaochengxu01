/* totalprice */
.totalprice{
  position: fixed;
  height: 80rpx;
  padding-left: 20rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background: #e6e6e6;
}
.totalprice text{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
}
.totalprice text.settlement{
  display: block;
  text-align: center;
  width: 140rpx;
  height: 80rpx;
  background: #265832;
  color: #fff;
}