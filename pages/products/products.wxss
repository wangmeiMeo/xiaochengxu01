/* pages/products/products.wxss */
.clearfix{
  overflow: hidden;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
image{
  display: block;
  width: 100%;
}
.navigator{
  display: block;
}
.navigator-hover {
background-color:rgb(255, 255, 255);
opacity:1;
}
/*banner s*/
.banner{
  width:100%;
  height: 328rpx;
}
.banner image{
  height: 375rpx;
}

/*detail s  */
.detail{
  margin-top: 50rpx;
}
.detail text{
  padding-left: 40rpx;
  display: block;
  color: #666;
  font-size: 28rpx;
}
.detail .info{
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
}
.detail .price{
  font-size: 32rpx;
  color: #ea556b;
  font-weight: bold;
  margin-top: 10rpx;
}
.detail .price text{
  display: inline-block;
  color: #ea556b;
  padding-left: 0;
  font-size: 32rpx;  
}
.detail .size{
  margin-top: 20rpx;
}
/*detail e  */
/*pay s  */
.pay{
  padding: 30rpx;
  background: #f4f4f4;
  margin-top: 30rpx;
}
.pay image{
  width: 40rpx;
  float: left;
  margin-right: 10rpx;
}
.pay text{
  float: left;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 30rpx;
  color: #bebebe;
}
/*pay e  */

/*des s  */
.des{
  margin-top: 10rpx;
}
.des text{
  display: block;
  padding: 20rpx;
  font-size: 28rpx;
}
/*des e  */
/*footer s  */
.footer{
  margin-top: 50rpx;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
}
.footer view{
  display: block;
  width: 20%;
}
.footer view navigator{
  width: 100%;
}
.footer view image{
  width: 60rpx;
  margin: 0 auto;
  margin-top: 16rpx;
}
.footer button{ 
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  background: #29402e;
  color: #fff;
  border-radius:0; 
  font-size: 30rpx;
}
/*footer e  */
/*goods s  */
.goods{
  width: 100%;
  display: block;
  position: fixed;
  height: 477rpx;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 1000000000;
  padding-top: 50rpx;
}
.goods text{
  display: block;
}
.goods .sizes{
  width: 85%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.goods .num{
  width: 85%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.goods .total{
  width: 85%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.goods .num  .fr{
  width: 25%;
  text-align: center;
}
.goods .num  .fr .subtraction{
  font-size: 55rpx;
}
.goods .num  .fr .add{
  font-size: 40rpx;
}
.goods .num  .fr text{
  display: inline-block;
}
.goods .total  .fr{
  width: 25%;
  text-align: center;
}
.goods  text{
  font-size: 32rpx;
}
.goods .shu{
  margin: 0 10rpx;
  border: 1px solid #999;
  padding:  0 20rpx;
  width: 30rpx;
  text-align: center;
}
.goods .sizes .fl{
  color: #333;
}
.goods .sizes .fr{
  color: #dc566f;
}
.goods .sizes .fr text{
  display: inline-block;
  color: #dc566f;
}
.goods .sure{
  background: #29402e;
  color: #fff;
  border-radius: 0; 
  height: 90rpx;
}
.goods .specifications{
  width: 85%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}

.goods .specifications .fr{
  width:70%;
  display: flex;
}
.goods .specifications .fr text{
  width: 18%;
  float: left;
  font-size: 28rpx;
  padding: 8rpx 0;
  margin-right:10rpx;
  border: 1px solid #929292;
  border-radius:6rpx;
  text-align: center; 
}
.goods .specifications .fr text.on{
  background: #29402e;
  border: 1px solid #929292;
  color: #fff;

}
/*goods e  */
.bright_view_hide{
 display: none;
}
.bright_view_show{
 display: block;
}
/*main 弹出层  */
.main{
  position: absolute; 
  z-index: 10000;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0,.6);
}